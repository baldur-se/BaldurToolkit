<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>BaldurToolkit.DataTables</PackageId>
    <AssemblyName>BaldurToolkit.DataTables</AssemblyName>
    <AssemblyTitle>BaldurToolkit.DataTables</AssemblyTitle>
    <Description>In-memory indexed collections.</Description>
    <Copyright>Copyright (C) 2010-2018 Baldur Team</Copyright>
    <Authors>Baldur Team</Authors>
    <VersionPrefix>0.6.0</VersionPrefix>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8</LangVersion>
    <NoWarn>$(NoWarn);SA0001;SA1600;SA1602;SA1633;SA1652</NoWarn>
    <TreatWarningsAsErrors Condition=" '$(Configuration)' == 'Release' ">true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CsvHelper" Version="2.16.3" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\..\stylecop.json" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118" PrivateAssets="All" />
  </ItemGroup>

</Project>
